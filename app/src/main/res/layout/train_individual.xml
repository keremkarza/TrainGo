<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/parent"
    android:layout_margin="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutofAvailable"
        android:background="#FAF4F4">

        <TextView
            android:id="@+id/trainNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train number"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/trainLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train location"
            android:textStyle="bold"
            android:layout_below="@+id/trainNumber"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/trainLocation"/>





    </RelativeLayout>





</androidx.cardview.widget.CardView>